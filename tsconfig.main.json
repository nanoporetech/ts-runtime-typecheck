{
	"compilerOptions": {
		"declaration": false,
		"outDir": ".",
		"lib": ["es2020"],
		"removeComments": true,
		"target": "es2018",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"importsNotUsedAsValues": "error"
	},
	"include": [
		"src"
	],
	"exclude": [
		"**/*.test.ts"
	]
}